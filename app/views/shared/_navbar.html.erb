<div class="navbar navbar-expand-sm navbar-light navbar">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "Logo_CaraNews_blanc.png", style: "width: 100%; height: auto;" %>
    <% end %>
  </div>
</div>



  <div class="navbar navbar-expand-sm navbar-light navbar-mini">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto mx-auto">
      <% if user_signed_in? %>
        <li class="nav-item <%= 'active' if current_page?(root_path) %>">
          <%= link_to "Home", root_path, class: "nav-link custom-home-link" %>
        </li>

        <% if current_user.user_type.in?(['admin', 'poster']) %>
          <!-- Bouton spécifique pour les administrateurs et posteurs -->
          <li class="nav-item <%= 'active' if current_page?(new_post_path) %>">
            <%= link_to "Créer un article", new_post_path, class: "nav-link custom-home-link" %>
          </li>
        <% end %>
        <% if current_user.user_type.in?(['admin']) %>
          <!-- Bouton spécifique pour les administrateurs et posteurs -->
          <li class="nav-item <%= 'active' if current_page?(subscribers_path) %>">
            <%= link_to "Liste", subscribers_path, class: "nav-link custom-home-link" %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Mon Compte
          </a>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "Mon profil", profile_path(current_user), class: "dropdown-item" %>
            <%= link_to "Déconnexion", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
