<div class="container pt-5 mb-5">
  <%= simple_form_for @post, data: { turbo: false }, html: { class: "form", id: "post-form" } do |form| %>
<div class="form-inputs">
  <%= form.input :title, label: "Titre de l'article", input_html: { class: "form-control" } %>
  <%= form.input :category, label: "Catégorie de l'article", as: :select, collection: ['Comprendre l\'actualité', 'Créer le futur', 'Arts et culture', 'Méditation et spiritualité', 'Événements et Inscriptions'], prompt: "Sélectionner une catégorie", input_html: { class: "form-control" } %>
<div class="form-group">
  <label for="post_content">Contenu de l'article</label>
  <textarea id="post_content" name="post[content]" style="width: 100%; min-height: 500px;"></textarea>
</div>
  <br>
  <%= form.file_field :image, label: "URL de l'image", input_html: { class: "ctsm-btn", id: "image-input" } %>
</div>

    <br>
    <div class="cstm-btn-container">
      <%= form.button :submit, "Créer l'article", class: "cstm-btn" %>
    </div>
  <% end %>
</div>
